{
  "version": 2,
  "builds": [
    { "src": "index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/index.js" },
    { "src": "/uploads/(.*)", "dest": "/backend/uploads/$1" }
  ],
  "rewrites": [
    {
      "source": "/uploads/(.*)",
      "destination": "/backend/uploads/$1"
    }
  ]
}
